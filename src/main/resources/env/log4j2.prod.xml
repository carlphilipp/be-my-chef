<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{dd/MM/yyyy HH:mm:ss}{America/Chicago} - %-5p [%c{1}:%L] %m%n" />
    </Console>
    <SMTP name="Email" subject="[Be My Chef] Log Exception" from="sys@bemychef.com.au"
      to="sys@bemychef.com.au" smtpProtocol="smtps" smtpHost="smtp.zoho.com"
      smtpPort="465" smtpUsername="sys@bemychef.com.au" smtpPassword="Sys2014epickur"
      smtpDebug="false" bufferSize="512">
      <PatternLayout
        pattern="%d{dd/MM/yyyy HH:mm:ss}{America/Chicago} - %-5p [%c{1}:%L] %m%n" />
    </SMTP>
  </Appenders>
  <Loggers>
    <Logger name="com.epickur.api" level="info">
      <AppenderRef ref="Console" />
    </Logger>
    <Logger name="org.mongodb.driver" level="warn">
      <AppenderRef ref="Console" />
    </Logger>
    <Logger name="org.quartz" level="warn">
      <AppenderRef ref="Console" />
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console" />
      <AppenderRef ref="Email" level="error" />
    </Root>
  </Loggers>
</Configuration>