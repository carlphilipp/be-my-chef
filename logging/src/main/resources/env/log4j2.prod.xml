<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" shutdownHook="disable">
	<Properties>
		<Property name="logs_directory">/opt/tomcat/logs</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss}{UTC} - %-5p [%c{1}:%L] %m%n"/>
		</Console>
		<RollingRandomAccessFile name="File" fileName="${logs_directory}/epickur.log"
								 filePattern="${logs_directory}/archive/epickur-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout pattern="%d %p %c{1.} [%t] %m%n"/>
			<Policies>
				<TimeBasedTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="100 MB"/>
			</Policies>
		</RollingRandomAccessFile>
		<SMTP name="Email" subject="[BE MY CHEF] Log Exception" from="carl@bemychef.com.au"
			  to="sys@bemychef.com.au" smtpProtocol="smtps" smtpHost="smtp.zoho.com"
			  smtpPort="465" smtpUsername="carl@bemychef.com.au" smtpPassword="a3842100"
			  smtpDebug="false" bufferSize="512">
			<PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss}{UTC} - %-5p [%c:%L] %m%n"/>
		</SMTP>
	</Appenders>
	<Loggers>
		<AsyncLogger name="com.epickur.api" level="info" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</AsyncLogger>
		<AsyncLogger name="com.cribbstechnologies.clients.mandrill" level="warn" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File"/>
		</AsyncLogger>
		<AsyncLogger name="org.mongodb.driver" level="warn" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</AsyncLogger>
		<AsyncLogger name="org.quartz" level="warn" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
		</AsyncLogger>
		<AsyncRoot level="info">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="File"/>
			<AppenderRef ref="Email" level="error"/>
		</AsyncRoot>
	</Loggers>
</Configuration>
