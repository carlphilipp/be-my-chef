	<description>The API that allow users to connect to Epickur data.</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<maven.compiler.version>3.1</maven.compiler.version>
		<maven.surfire.version>2.17</maven.surfire.version>
		<maven.war.version>2.4</maven.war.version>
		<maven.failsafe.version>2.17</maven.failsafe.version>
		<maven.properties.version>1.0-alpha-2</maven.properties.version>
		<maven.site.version>3.4</maven.site.version>
		<maven.info.version>2.8</maven.info.version>
		<maven.javadoc.version>2.10.1</maven.javadoc.version>

		<java.version>1.7</java.version>
		<!--.version>2.12.3</mongodb.version-->
		<mongodb.version>3.0.0</mongodb.version>

		<jersey.version>2.17</jersey.version>
		<junit.version>4.11</junit.version>
		<mockito.version>1.10.19</mockito.version>
		<log4j.version>2.2</log4j.version>
		<joda.version>2.7</joda.version>
		<stripe.version>1.19.1</stripe.version>
		<hamcrest.version>1.3</hamcrest.version>
		<codec.version>1.10</codec.version>
		<httpclient.version>4.4</httpclient.version>
		<lang3.version>3.3.2</lang3.version>
		<quartz.version>2.2.1</quartz.version>
		<slf4j.version>1.7.10</slf4j.version>
		<io.version>2.4</io.version>
		<doxia.version>1.0</doxia.version>
		<mandrill.version>1.0.1</mandrill.version>
		<cobertura.version>2.6</cobertura.version>
		<pmd.version>3.4</pmd.version>
		<checkstyle.version>2.14</checkstyle.version>
		<tag.version>2.4</tag.version>
		<findbugs.version>3.0.0</findbugs.version>
		<versions.version>2.1</versions.version>
		<javancss.version>2.1</javancss.version>
		<plexus.version>1.5.12</plexus.version>
		<jackson.version>2.3.0</jackson.version>

		<cargo.version>1.4.12</cargo.version>
		<cargo.port>8180</cargo.port>

	</properties>

	<organization>
