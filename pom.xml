			<name>Boris Guenebaut</name>
			<email>boris.guenebaut@gmail.com</email>
			<url></url>
			<organization>Be My Chef</organization>
			<organizationUrl>http://www.bemychef.com.au</organizationUrl>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>America/Los_Angeles</timezone>
		</developer>
